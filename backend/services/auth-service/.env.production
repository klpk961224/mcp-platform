# 生产环境配置
APP_NAME=认证域服务
APP_ENV=production
APP_DEBUG=False
APP_PORT=28001

# 数据库配置
DATABASE_URL=mysql+pymysql://root:your_production_password@your-production-host:3306/mcp_platform

# Redis配置
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# JWT配置
JWT_SECRET=your-production-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key配置
API_KEY_SECRET=your-production-api-key-secret

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/auth-service.log